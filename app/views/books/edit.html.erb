<h2>Edit your vintage book:</h2>

<form method="POST" action="/users/<%=@user.slug%>/books/<%=@book.slug%>">
    <input id="hidden" type="hidden" name="method" value="path">

  <label for="title">Title:</label><br>
  <input id="title" type="text" name="title" value="<%=@book.title%>"><br>
  <br>

  <label for="author">Author:</label><br>
  <input id="author" type="text" name="author" value="<%=@book.author%>"><br>
  <br>

  <label for="publisher">Publisher:</label><br>
  <input id="publisher" type="text" name="publisher" value="<%=@book.publisher%>"><br>
  <br>

  <label for="genre">Genre:</label><br>
  <input id="genre" type="text" name="genre" value="<%=@book.genre%>"><br>
  <br>

  <label for="pages">Pages:</label><br>
  <input id="pages" type="text" name="pages" value="<%=@book.pages%>"><br>
  <br>

  <input type="submit" value="Edit">
</form>
